---
const { text, label } = Astro.props;
---

<!-- Contenedor de los botones con alineaci칩n a la izquierda -->
<div class="flex justify-start items-start space-y-4">
  <!-- Bot칩n que copiar치 el texto al portapapeles -->
  <div class="clipboard-button text-lg border-2 border-primary rounded-full px-6 py-4 cursor-pointer" data-text={text}>
      {label}
  </div>
</div>

<!-- Script que se ejecuta en el cliente -->
<script>
  // Seleccionar todos los botones con la clase 'clipboard-button'
  const buttons = document.querySelectorAll('.clipboard-button');

  // Agregar el evento click a cada bot칩n
  buttons.forEach((button) => {
    button.addEventListener('click', () => {
      const textToCopy = button.getAttribute('data-text');
      
      // Copiar el texto al portapapeles
      navigator.clipboard.writeText(textToCopy).then(() => {
        alert(`Texto copiado: ${textToCopy}`);
      }).catch((error) => {
        console.error('Error al copiar al portapapeles:', error);
      });
    });
  });
</script>
